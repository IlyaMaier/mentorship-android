<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivNotificationImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/notification_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:textColor="#252525"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivNotificationImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNotificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="#252525"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivNotificationImage"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationTitle" />

    <TextView
        android:id="@+id/tvNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_normal"
        android:textColor="#252525"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/notificationDivider"
        app:layout_constraintStart_toEndOf="@+id/ivNotificationImage"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationMessage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnNotificationSeeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/notificationDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward_primary_24dp" />

    <View
        android:id="@+id/notificationDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#33000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivNotificationImage"
        app:layout_goneMarginTop="@dimen/margin_small" />

</androidx.constraintlayout.widget.ConstraintLayout>