<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.AboutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv1"
            android:layout_width="252dp"
            android:layout_height="176dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/mentorship_system_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2"
            android:layout_width="343dp"
            android:layout_height="199dp"
            android:layout_margin="@dimen/generic_28sp"
            android:layout_marginTop="16dp"
            android:text="@string/about_systers"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv3"
            android:layout_width="343dp"
            android:layout_height="76dp"
            android:layout_marginTop="24dp"
            android:text="@string/about_app"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv2" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:padding="14dp"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv3">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGit"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:outlineAmbientShadowColor="#55111109"
                android:outlineSpotShadowColor="#55111109"
                app:cardBackgroundColor="@color/aubergine"
                app:cardCornerRadius="20dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@string/our_github_link"
                        app:srcCompat="@drawable/ic_github" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/our_github_link"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSlack"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:outlineAmbientShadowColor="#55111109"
                android:outlineSpotShadowColor="#55111109"
                app:cardBackgroundColor="@color/aubergine"
                app:cardCornerRadius="20dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@string/systers_open_source_slack"
                        app:srcCompat="@drawable/ic_slack" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/systers_open_source_slack"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnWebsite"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:outlineAmbientShadowColor="#55111109"
                android:outlineSpotShadowColor="#55111109"
                app:cardBackgroundColor="@color/aubergine"
                app:cardCornerRadius="20dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@string/our_website"
                        app:srcCompat="@drawable/ic_web" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/our_website"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnTermsCondition"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:outlineAmbientShadowColor="#55111109"
                android:outlineSpotShadowColor="#55111109"
                app:cardBackgroundColor="@color/aubergine"
                app:cardCornerRadius="20dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@string/terms_and_conditions"
                        app:srcCompat="@drawable/ic_terms_and_condition" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/terms_and_conditions"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnprivacypolicy"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:outlineAmbientShadowColor="#55111109"
                android:outlineSpotShadowColor="#55111109"
                app:cardBackgroundColor="@color/aubergine"
                app:cardCornerRadius="20dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@string/privacy_policy"
                        app:srcCompat="@drawable/ic_privacy" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/privacy_policy"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btncodeofconduct"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:outlineAmbientShadowColor="#55111109"
                android:outlineSpotShadowColor="#55111109"
                app:cardBackgroundColor="@color/aubergine"
                app:cardCornerRadius="20dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@string/code_of_conduct"
                        app:srcCompat="@drawable/ic_code_of_conduct" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/code_of_conduct"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>